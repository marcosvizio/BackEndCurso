<div class="home">
    <h1>Welcome to my E-Commerce</h1>
    <hr>
    <h2>Categories</h2>
    <ul>
        <li>
            <a href="/products">Inicio</a>
        </li>
        <li>
            <a href="/products/?category=Remeras">T-Shirts</a>
        </li>
        <li>
            <a href="/products/?category=Camisas">Shirts</a>
        </li>
        <li>
            <a href="/products/?category=Pantalones">Pants</a>
        </li>
        <li>
            <a href="/products/?category=Buzos">Coverall</a>
        </li>
    </ul>
    <h3>Products</h3> 
    <div class="productsList">
        {{#if products}}
            {{#each products}}
                <div class="card" style="width: 18rem;margin: 0.5rem">
                    <img src={{this.thumbnails}} class="card-img-top" alt={{this.title}}>
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text">${{this.price}}</p>
                        <a href="#" class="btn btn-success">Agregar al carrito</a>
                    </div>
                </div>  
            {{/each}}
    </div>
            {{#if hasPrevPage}}
                    <a href="/products/?page={{prevPage}}"><button class="btn_paginate">Back</button></a>
                {{/if}}
                <p class="p_paginate">{{page}}</p>
                {{#if hasNextPage}}
                    <a href="/products/?page={{nextPage}}"><button class="btn_paginate">Next</button></a>
            {{/if}}
        {{else}}
            <p>There are no more products in the store.</p>
        {{/if}}
</div>

