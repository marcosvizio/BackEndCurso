<div>
    <h1>Your Cart</h1>
    <div>
        {{#if products}}
            {{#each products}}
                <div class="card" style="width: 18rem;margin: 0.5rem">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.title}}</h5>
                        <p class="card-text">{{this.product.description}}</p>
                        <p class="card-text">Quantity:{{this.quantity}}</p>
                        <p class="card-text">${{this.product.price}}</p>
                        <a id="deleteProduct" href="#" class="btn btn-danger">Delete Product</a>
                    </div>
                </div>  
            {{/each}}
            <a href="#" class="btn btn-success">Buy</a>
        {{else}}
            <p>There are no products in the cart.</p>
        {{/if}}
    </div>
    <hr>
    <a href="/products" class="btn btn-warning">Back to Products</a>
</div>

<script src="/js/deleteProduct.js"></script>
